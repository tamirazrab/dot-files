[disk]
command=~/.local/share/i3blocks-modules/disk -f "ÔÇ† {free} {funit}iB / {total} {tunit}iB ({pused}%)" -tc '{pfree}' '<' 20 -tc '{pfree}' '<' 10
instance=/

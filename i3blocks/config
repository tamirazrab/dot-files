[battery]
command=~/.local/share/i3blocks-modules/battery -fe '{percent}' '<' 90 'ÔâÅ {percent}% ({time})' -fe '{percent}' '<' 75 'ÔâÇ {percent}% ({time})' -fe '{percent}' '<' 60 'ÔâÇ {percent}% ({time})' -fe '{percent}' '<' 35 'ÔâÉ {percent}% ({time})' -fe '{percent}' '<' 5 'ÔâÑ {percent}% ({time})' -fe '{status}' '=' '^charging' '‚ö° {percent}% ({time})' -fe '{status}' '=' 'full' 'ÔâÄ {percent}%' -tg '{status}' '=' 'full' -tg '{percent}' '=' 100 -ti '{status}' '=' '^charging' -tw '{percent}' '<' 30 -tc '{percent}' '<' 5
instance=Battery 0
interval=1
markup=pango

[TIME_DATE]
